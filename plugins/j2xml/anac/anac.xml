  <authorUrl>www.eshiol.it</authorUrl>
  <version>3.0.2.26</version>
  <description>PLG_J2XML_ANAC_XML_DESCRIPTION</description>
  <scriptfile>enable.php</scriptfile>
  <updateservers>
    <server type="extension" priority="1" name="ANAC for J2XML Updates"><![CDATA[http://www.eshiol.it/component/ars/updates/plugins/anac-for-j2xml-updates?format=xml]]></server>
