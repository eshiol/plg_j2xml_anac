  <languages folder="language">
    <language tag="en-GB">en-GB/en-GB.plg_j2xml_anac.ini</language>
    <language tag="en-GB">en-GB/en-GB.plg_j2xml_anac.sys.ini</language>
    <language tag="it-IT">it-IT/it-IT.plg_j2xml_anac.ini</language>
    <language tag="it-IT">it-IT/it-IT.plg_j2xml_anac.sys.ini</language>
  </languages>
  <config>
    <fields name="params">
      <fieldset name="basic">
        <field name="title" type="list" label="JGLOBAL_TITLE" description="">
          <option value="abstract">PLG_J2XML_ANAC_ABSTRACT</option>
          <option value="title">PLG_J2XML_ANAC_TITLE</option>
        </field>
        <field name="category_id" type="category" label="PLG_J2XML_ANAC_FIELD_CATEGORY_LABEL" extension="com_content" default="2" description="PLG_J2XML_ANAC_FIELD_CATEGORY_DESC"/>
      </fieldset>
    </fields>
