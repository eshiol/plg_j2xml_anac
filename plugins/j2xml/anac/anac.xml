<?xml version="1.0" encoding="utf-8"?>
<extension version="3.6" type="plugin" group="j2xml" method="upgrade">
  <name>plg_j2xml_anac</name>
  <author>Helios Ciancio</author>
  <creationDate>March 2018</creationDate>
  <copyright>(C) 2016, 2018 Helios Ciancio. All rights reserved.</copyright>
  <license>http://www.gnu.org/licenses/gpl-3.0.html GNU/GPL v3</license>
  <authorEmail>info@eshiol.it</authorEmail>
  <authorUrl>www.eshiol.it</authorUrl>
  <version>3.8.1.2</version>
  <description>PLG_J2XML_ANAC_XML_DESCRIPTION</description>
  <updateservers>
    <server type="extension" priority="2" name="ANAC Importer for J2XML">https://www.eshiol.it/files/plg_j2xml_anac/plg_j2xml_anac.xml</server>
  </updateservers>
  <scriptfile>enable.php</scriptfile>
  <files>
    <filename plugin="anac">anac.php</filename>
    <filename>anac.xsl</filename>
    <filename>italiapa.xsl</filename>
  </files>
  <languages folder="language">
    <language tag="en-GB">en-GB/en-GB.plg_j2xml_anac.ini</language>
    <language tag="en-GB">en-GB/en-GB.plg_j2xml_anac.sys.ini</language>
    <language tag="it-IT">it-IT/it-IT.plg_j2xml_anac.ini</language>
    <language tag="it-IT">it-IT/it-IT.plg_j2xml_anac.sys.ini</language>
  </languages>
  <config>
    <fields name="params">
      <fieldset name="basic">
        <field name="title" type="list" label="JGLOBAL_TITLE" description="" default="year">
          <option value="abstract">PLG_J2XML_ANAC_ABSTRACT</option>
          <option value="title">PLG_J2XML_ANAC_TITLE</option>
          <option value="year">PLG_J2XML_ANAC_YEAR</option>
        </field>
        <field name="category_id" type="category" label="PLG_J2XML_ANAC_FIELD_CATEGORY_LABEL" extension="com_content" default="2" description="PLG_J2XML_ANAC_FIELD_CATEGORY_DESC"/>
        <field name="xsl" type="list" label="PLG_J2XML_ANAC_XSL_LABEL" description="PLG_J2XML_ANAC_XSL_DESC" default="anac.xsl">
          <option value="anac.xsl">PLG_J2XML_ANAC_XSL_ANAC</option>
          <option value="italiapa.xsl">PLG_J2XML_ANAC_XSL_ITALIAPA</option>
        </field>
        <field name="accordion" type="list" label="PLG_J2XML_ANAC_ITALIAPASTYLE_LABEL" description="PLG_J2XML_ANAC_ITALIAPASTYLE_DESC" default="" showon="xsl:italiapa.xsl">
          <option value="">PLG_J2XML_ANAC_ITALIAPASTYLE_DEFAULT</option>
          <option value="Accordion Accordion--plus">PLG_J2XML_ANAC_ITALIAPASTYLE_PLUS</option>
        </field>
      </fieldset>
      <fieldset name="debug" label="PLG_J2XML_ANAC_DEBUG_FIELDSET_LABEL">
        <field name="debug" type="radio" default="0" class="btn-group btn-group-yesno" description="PLG_J2XML_ANAC_DEBUG_SYSTEM_DESC" label="PLG_J2XML_ANAC_DEBUG_SYSTEM_LABEL">
          <option value="1">JYES</option>
          <option value="0">JNO</option>
        </field>
        <field name="log" type="text" label="PLG_J2XML_ANAC_DEBUG_FILENAME_LABEL" description="PLG_J2XML_ANAC_DEBUG_FILENAME_DESC" default="eshiol.log.php" showon="debug:1"/>
        <field name="phpconsole" type="radio" class="btn-group btn-group-yesno" default="0" description="PLG_J2XML_ANAC_DEBUG_PHPCONSOLE_DESC" label="PLG_J2XML_ANAC_DEBUG_PHPCONSOLE_LABEL">
          <option value="1">JYES</option>
          <option value="0">JNO</option>
        </field>
      </fieldset>
    </fields>
  </config>
</extension>
